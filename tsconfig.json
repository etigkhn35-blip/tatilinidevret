{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    /* ðŸ”¹ PATH ALIASLARI */
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    /* ðŸ”¹ TYPE SETTINGS */
    "types": [
      "node"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "src/types/global.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "functions",
    "functions/**/*"
  ]
}
